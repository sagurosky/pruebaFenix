package com.cimientos.intranet.enumerativos;

import java.io.Serializable;
import java.security.InvalidParameterException;
import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

public enum AnioEscolar implements Serializable{
	
	INICIAL			(1	,"Nivel Inicial"),
	PRIMERO_PRIM	(2	,"1º primaria"),
	SEGUNDO_PRIM	(3	,"2º primaria"),
	TERCERO_PRIM	(4	,"3º primaria"),
	CUARTO_PRIM		(5	,"4º primaria"),
	QUINTO_PRIM		(6	,"5º primaria"),
	SEXTO_PRIM		(7	,"6º primaria"),
	PRIMERO_SEC		(8	,"1º secundaria"),
	SEGUNDO_SEC		(9	,"2º secundaria"),
	TERCERO_SEC		(10	,"3º secundaria"),
	CUARTO_SEC		(11	,"4º secundaria"),
	QUINTO_SEC		(12	,"5º secundaria"),
	SEXTO_SEC		(13	,"6º secundaria"),
	SEPTIMO_SEC		(14	,"7º técnica"),
	RECIBIDO		(15	,"-");	
	
	private Integer id;
	private String valor;
	
	
	private AnioEscolar(Integer id, String valor) {
		this.id = id;
		this.valor = valor;
	}


	public Integer getId() {
		return id;
	}


	public void setId(Integer id) {
		this.id = id;
	}


	public String getValor() {
		return valor;
	}


	public void setValor(String valor) {
		this.valor = valor;
	}

	public static List<AnioEscolar> getAniosEscolares(List<Integer> ids){
		ArrayList<AnioEscolar> valor = new ArrayList<AnioEscolar>();
		
		for (Integer id: ids)
			valor.add(AnioEscolar.getAnioEscolar(id));
		
		return valor;
	}
	
	public static AnioEscolar getAnioEscolar(Integer id){
		switch (id) {
		case 1:
			return INICIAL;
		case 2:
			return PRIMERO_PRIM;
		case 3:
			return SEGUNDO_PRIM;
		case 4:
			return TERCERO_PRIM;
		case 5:
			return CUARTO_PRIM;
		case 6:
			return QUINTO_PRIM;
		case 7:
			return SEXTO_PRIM;
		case 8:
			return PRIMERO_SEC;
		case 9:
			return SEGUNDO_SEC;
		case 10:
			return TERCERO_SEC;
		case 11:
			return CUARTO_SEC;
		case 12:
			return QUINTO_SEC;
		case 13:
			return SEXTO_SEC;
		case 14:
			return SEPTIMO_SEC;
		case 15:
			return RECIBIDO;
			
		default:
			throw new InvalidParameterException("Evaluacion de Año escolar desconocido: "
					+ id);
		}
	}


	public static List<AnioEscolar> getAnioEscolares() {
		return Arrays.asList(values());
	}
	
	/**
	 * Son todos los años escolares menos el "-"
	 * @return
	 */
	public static List<AnioEscolar> getAnioEscolaresActivos() {
		return Arrays.asList(INICIAL,PRIMERO_PRIM,SEGUNDO_PRIM,TERCERO_PRIM,CUARTO_PRIM,QUINTO_PRIM,
				SEXTO_PRIM,PRIMERO_SEC,SEGUNDO_SEC,TERCERO_SEC,CUARTO_SEC,QUINTO_SEC,SEXTO_SEC,SEPTIMO_SEC);		
	}
}
