	<script type="text/javascript">
	$(function() {
		$("#altaEntrevistaRenovacion").validate({
   		invalidHandler: function(form, validator) {
   			var errors = validator.numberOfInvalids();
   			if (errors) {
   				$.unblockUI();
   			}
   		}
    });
	    
		$('#datepicker').datepicker({
			changeMonth: true,
			changeYear: true,
		 	  yearRange:'-1:+1'
		});
		$("#datepicker1").datepicker({
		  	  changeMonth: true,
			  changeYear: true,
		 	  yearRange:'-1:+1'
			  });
